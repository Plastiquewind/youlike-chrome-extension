{
  "manifest_version": 2,
  "name": "YouLike - Восстановление лайков",
  "short_name": "YouLike",
  "version": "1.0.1",
  "browser_action": {
    "default_icon": "icon.png"
  },
  
  "icons": {
	  "310": "icon.png"
  },

  "background": {
    "scripts": ["js/vendor.js", "js/background.js"]
  },

  "permissions": [
    "storage",
    "unlimitedStorage",
    "tabs",
    "https://*.youtube.com/watch*",
    "https://youlikeapp.github.io/*"
  ]
}